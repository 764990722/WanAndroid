<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/main">

        <zymk.wzmyyj.mytop.wanandroidmy.widget.IconFontTextView
            android:id="@+id/icon_android"
            style="@style/topbar_icon_style"
            android:text="@string/ic_android" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/icon_android"
            android:text="WanAndroId"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <zymk.wzmyyj.mytop.wanandroidmy.widget.IconFontTextView
            android:id="@+id/tv_hot"
            style="@style/topbar_icon_style"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/tv_search"
            android:text="@string/ic_hot"
            android:visibility="invisible" />

        <zymk.wzmyyj.mytop.wanandroidmy.widget.IconFontTextView
            android:id="@+id/tv_search"
            style="@style/topbar_icon_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:text="@string/ic_search" />

    </RelativeLayout>

</LinearLayout>